<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRootrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MapActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/activity_map"
     />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/grap_search" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="7dp"
                android:text="어떤 여행기를 찾으세요?"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btmsearch"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_search" />

            <Button
                android:id="@+id/mapback"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:background="@drawable/btn_back"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mInfoll"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivPlace"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="19dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/icn_marker_map" />

            <TextView
                android:id="@+id/tvPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="27dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPlaceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="55dp"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mSelectll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvSelectAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 위치로 지정할래요!" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>