<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRootrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/activity_map" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnworldback"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn_back"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="54dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/btn_search" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="54dp"
                android:layout_marginRight="54dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/search_bar" />

            <Button
                android:id="@+id/btmsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="54dp"
                android:background="#00000000"/>

            <Button
                android:id="@+id/mapback"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_back" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mInfoll"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivPlace"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="19dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/icn_marker_map" />

            <TextView
                android:id="@+id/tvPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="27dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPlaceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="55dp"
                android:singleLine="true"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mSelectll"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/icn_marker_map"/>

        <TextView
            android:id="@+id/tvselname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="17dp"
            android:text="장소 정보 없음"
            android:singleLine="true"
            android:textSize="16sp" />



            <TextView
                android:id="@+id/tvSelectAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="12dp"
                android:text="ADDRESS" />

        <Button
            android:id="@+id/btchooseplace"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="81dp"
            android:background="@drawable/btn_selection_position" />

    </RelativeLayout>
</RelativeLayout>