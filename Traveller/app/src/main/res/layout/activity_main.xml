<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamsung.traveller.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--top view-->
        <RelativeLayout android:id="@+id/layout_top_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <!--search bar-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btnAddTravel">

                <!--search button-->
                <Button android:id="@+id/btn_search_main"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>

                <!--search text-->
                <EditText android:id="@+id/txt_search_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/btn_search_main"
                    android:maxLines="1"
                    android:hint="어떤 여행기를 찾으세요?"
                    android:textSize="15sp"
                    android:textColor="#212121"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnAddTravel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <!--empty image-->
        <ImageView android:id="@+id/image_empty_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_top_main"/>

        <!--item view-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@id/layout_top_main">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <!--add new item button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtn_add_main"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_margin="16dp"/>

</android.support.design.widget.CoordinatorLayout>
