<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/history_content_border"
    android:orientation="vertical">

    <ImageView android:id="@+id/history_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <TextView android:id="@+id/history_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="16dp"
        android:text="갬성"/>

    <TextView android:id="@+id/history_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:text="2018.01.25~2018.01.26"
        android:background="@drawable/history_endline_border"/>
</LinearLayout>