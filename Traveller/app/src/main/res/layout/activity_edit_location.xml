<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barLayout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:elevation="1dp"
            android:id="@+id/toolTitle"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:textSize="20sp"
                    android:layout_weight="2"/>

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Trip_Name"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_weight="6"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:layout_weight="2"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager

        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barLayout"
        android:layout_above="@+id/tvMission"
        android:visibility="visible">

    </android.support.v4.view.ViewPager>

        <EditText
            android:id="@+id/tvMission"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/layoutLocation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="일정명" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutLocation"
        android:layout_above="@+id/layoutToggle">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton"
            android:text="지도"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLocation"
            android:text="여행 위치/좌표"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutToggle"
        android:layout_above="@+id/memoEdit">

        <ToggleButton
            android:id="@+id/doToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutLocation"
            android:layout_toEndOf="@+id/memoEdit"
            android:layout_toRightOf="@+id/memoEdit"
            android:textOff="하기"
            android:textOn="하기" />

        <ToggleButton
            android:id="@+id/eatToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="먹기"
            android:textOn="먹기" />

        <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeToggleBtn"
        android:textOn="찍기"
        android:textOff="찍기"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/somethingToggleBtn"
            android:textOn="뭐하지"
            android:textOff="뭐하지"/>

    </LinearLayout>

        <EditText
            android:id="@+id/memoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_above="@id/btnNextPlan"/>

        <Button
            android:id="@+id/btnNextPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="다음 일정 등록" />

</RelativeLayout>