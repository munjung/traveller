<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barLayout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:elevation="1dp"
            android:id="@+id/toolTitle"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/btn_back"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 여행기록"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/btnSave"
                        android:layout_toRightOf="@id/btnHome"/>

                <ImageButton
                    android:id="@+id/btnSave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_check_save"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/tvMission"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/pager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textColor="#5d5d5d"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutLocation"
        android:layout_above="@+id/layoutToggle">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton"
            android:text="지도"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLocation"
            android:text="여행 위치/좌표"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutToggle"
        android:layout_above="@+id/memoEdit">

        <ToggleButton
            android:id="@+id/doToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutLocation"
            android:layout_toEndOf="@+id/memoEdit"
            android:layout_toRightOf="@+id/memoEdit"
            android:textOff="하기"
            android:textOn="하기" />

        <ToggleButton
            android:id="@+id/eatToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="먹기"
            android:textOn="먹기" />

        <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeToggleBtn"
        android:textOn="찍기"
        android:textOff="찍기"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/somethingToggleBtn"
            android:textOn="뭐하지"
            android:textOff="뭐하지"/>

    </LinearLayout>

        <EditText
            android:id="@+id/memoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_above="@id/btnNextPlan"/>

        <Button
            android:id="@+id/btnNextPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="다음 일정 등록" />

    <android.support.v4.view.ViewPager

        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/barLayout"
        android:layout_toEndOf="@+id/memoEdit"
        android:layout_toRightOf="@+id/memoEdit"
        android:visibility="visible">

    </android.support.v4.view.ViewPager>

</RelativeLayout>