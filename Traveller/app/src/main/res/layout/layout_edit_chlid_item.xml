<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/clickableIV"/>

    <ImageView
        android:id="@+id/img_viewpager_childimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="#000000"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@drawable/img_b_g_photo_tag">

        <EditText
            android:id="@+id/txt_memo_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"
            android:textColorHint="@android:color/white"
            android:maxLines="2"
            android:background="@null"
            android:hint="여기에 이 사진에 대한 메모를 남겨보세요."/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/btn_represent_edit_child_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp">

        <Button android:id="@+id/btn_inner_represent_edit_child_item"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_represent_photo_off"/>

    </RelativeLayout>

</RelativeLayout>
